{
  "manifest_version": 3,
  "name": "Notion Themes",
  "version": "0.0.2",
  "description": "Make your Notion pretty with custom themes.",
  "permissions": ["storage"],
  "host_permissions": ["https://notionthemes.netlify.app/"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.notion.so/*"],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_title": "Choose a theme",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "icons/16.png",
      "38": "icons/48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
